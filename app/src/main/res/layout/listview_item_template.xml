<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mediaImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_header_button_padding_left"
            app:srcCompat="@android:drawable/ic_delete" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_header_button_padding_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mediaHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Header"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                tools:text="Header" />

            <TextView
                android:id="@+id/mediaRuntimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Runtime 125 min" />

            <TextView
                android:id="@+id/mediaDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oct 18, 2016" />

            <TextView
                android:id="@+id/mediaPlotTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[Plot of the movie / series]" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>