    <com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_background"
        app:parallax_factor="1.9"
        tools:context="com.cryptocodes.thorrent.MediaDetailActivity"
        android:id="@+id/parallaxScrollView">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                tools:ignore="HardcodedText"
                android:layout_gravity="center">
                <TextView android:text="Movie Name"
                    android:textColor="@color/card_text_color_header"
                    android:textSize="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieDetailsMovieName"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/card_text_color_header"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"/>
                <TextView android:text="N/A"
                    android:textColor="@color/card_text_color_header"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieDetailsReleaseYear"/>
                <TextView
                    android:textColor="@color/card_text_color_header"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"/>
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView android:text="Genre: "
        android:textColor="@color/card_text_color_header"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:text="N/A"
        android:textColor="@color/card_text_color_header"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieDetailsGenre"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:text="Runtime: "
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:text="N/A"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDetailsRuntime"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:text="IMDB Rating: "
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:text="N/A"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDetailsRating"/>

        <TextView android:text=" / 10"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:text=" ("
        android:fontFamily="sans-serif-light"
        android:textColor="@color/card_text_color_header"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView android:text=""
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mediaDetailsImdbVotes"/>

        <TextView android:text=" votes)"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:text="Metascore: "
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:text="N/A"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDetailsMetascoreRating"/>
        <TextView android:text=" / 100"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:text="Director: "
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:text="N/A"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDetailsDirector"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:text="Actors: "
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:text="N/A"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDetailsActors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:text="Country: "
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:text="N/A"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDetailsCountry"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:text="Synopsis: "
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView android:text="Plot summary..."
            android:fontFamily="sans-serif-light"
            android:textColor="@color/card_text_color_header"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDetailsPlot"/>
    </LinearLayout>
        </LinearLayout>

    </com.nirhart.parallaxscroll.views.ParallaxScrollView>

